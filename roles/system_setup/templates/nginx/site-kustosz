upstream kustosz {
    server localhost:{{ kustosz_internal_port }};
}

server {
    listen {{ kustosz_external_port }};

    location / {
        proxy_pass http://kustosz;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
        client_max_body_size 100M;
    }

    location /ui/ {
        alias {{ frontend_path }}/;
    }
}
